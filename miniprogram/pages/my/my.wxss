/* pages/my/my.wxss */

.main{
  width: 100%;
}
/* 用户信息 */
.user-info{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left:30rpx ;
  margin-bottom: 20rpx;
  background: #fff;
}
.user-info .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius:50% ;
  background:#dcdcdc;

}
.user-info .info{
  flex:1;
  height: 85rpx;
  padding-left: 30rpx;
}
.user-info .name{
  display: inline-block;
  font-size: 38rpx;
  
}
/* 订单 */
.order{
height: 240rpx;
width: 100%;
background: #fff;
margin-bottom: 10rpx;
  
}
.order-header{
display: flex;
align-items:center ;
justify-content: space-between;
height: 200rpx;
padding:0 30rpx ;

}
.order-header .right{
  display: flex;
  align-items: center;
}
.order-header .txt{
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.order-header .all{
  font-size:25rpx ;
  color: #666;
  margin-right: 10rpx;

}
.order-header .arrow{
  width: 12rpx;
  height: 24rpx;

}
/* 订单tab */
.order-tab{
  height: 100rpx;
  display: inline;
  align-items: center;
  justify-content: space-around;
}
.order-tab .tab{
  margin-top: 40rpx;
  flex-direction: row;
   align-items: center;
  justify-content: center; 
  width: 120rpx;
}
.tab .icon-image{
  width: 48rpx;
  height: 48rpx;
 position: relative;
 display: flex; 
}
.tab .icon{
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;

}
.tab .txt{
 
  font-size: 35rpx;
  color: rgb(10, 10, 10);

}
 .icon-badge{
   position: absolute; 
   top: -.6em;
  right: -.6em; 

} 
.hr{
  height: 15rpx;
  background-color: #cccccc;
  opacity: 0.2;
}
.divLine{
  margin-left: 50rpx;
  background: rgb(192, 190, 190);
  width: 100%;
  height: 2rpx;

}

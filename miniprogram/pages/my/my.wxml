<!--pages/my/my.wxml-->
<view class="mian">
<!--用户授权了，就显示头像和昵称-->
<view class="user-info" wx:if="{{isShowUserName}}" >
  <image class='avatar' src="{{userInfo.avatarUrl}}"></image>
  <view class="info">
    <text class="name">{{userInfo.nickName}}</text>
  </view>
</view>
<!-- 如果用户没有授权，就显示登陆按钮 -->
<view wx:else="{{isShowUserName}}" class="user-info" bindtap="getUserProfile">
  <image class="avatar"></image>
  <view class="info">
    <text class="name">立即登录</text>
  </view>

</view>


</view>
<!-- 分割线 -->
<view class="hr"></view>
<!-- 订单布局 -->
<view class="order">

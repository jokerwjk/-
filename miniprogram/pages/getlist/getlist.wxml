<!--pages/getlist/getlist.wxml-->
<!-- 顶部导航 全部，待开工，已开工，已完工-->
<view class="case-display" style="background-color: lightgray;" >
  <block wx:for="{{scrollviewTitle}}" wx:key="index">
    <view class="{{currentIndex==index?'selected':'normal'}}" id="{{index}}" bindtap="changeCurrentIndex">{{item}}
    </view>
  </block> 
</view>

<view wx:if="{{currentIndex==0}}">
  <view wx:for="{{all}}" wx:key="index" class="yellow" bindtap="alltojuti" data-index="{{index}}" style="width: 750rpx; height: 300rpx; background:white; margin-top: 20rpx;display:flex;flex-direction: row;margin: 10rpx;background-color: lightgrey;">
     
     <image src="{{item.image}}" style="width: 265rpx; height: 300rpx; display: block; box-sizing: border-box; top: 10rpx; left: 20rpx"></image>
     <view>
          <view >
            <text style="font-weight: 900;">{{item.orderName}}</text>
            <button size="mini" style="position: relative; top: 10rpx; left: 26rpx; width: 125rpx; height: 45rpx; display: inline-block; box-sizing: border-box; font-size: small"plain="true" type="warn">{{item.orderNumber}}人</button>
            <button size="mini" style="position: relative; top: 12rpx; left: 26rpx; width: 104rpx; height: 50rpx; display: inline-block; box-sizing: border-box; font-size: small" plain="true" type="warn">{{item.orderDay}}天</button>
         </view>
         <view>
         
         </view>
        <view >
           <text class="grey" style="font-weight: 300;font-size: small;">{{item.username}}</text>
         </view>  

        <view>
            <text class="grey"  style="top: 30rpx;line-height: 100rpx;font-size: small;"> 开工日期：{{item.startTime}}</text>
         </view>
         <view style="font-size:smaller">
              <text class="grey" style="font-size: 37rpx;color: rgb(241, 94, 83);line-height: 50rpx;font-weight: 400;"> 工资：{{item.salary}}元/天</text>
         </view>
     </view>
  </view>
</view>
